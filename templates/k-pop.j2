{% extends "base.j2" %}
{% block title %}🇰🇷 K-POP Festivals & Concerts 2025 (BTS, BLACKPINK) | Days2Event{% endblock %}
{% block description %}Track K-POP concerts and festivals for 2025, featuring BTS, BLACKPINK, and more. See all dates, locations, and official links for every major K-POP event worldwide!{% endblock %}

{% block hero %}
<header class="hero">
  <h1>🎵 K-POP Festivals & Concerts 2025</h1>
  <p>Discover the hottest K-POP events around the world! Stay updated with dates, venues, and more for your favorite stars.</p>
</header>
{% endblock %}


<main class="events" id="events">
  {% for event in events %}
  <div class="event-card" data-start-date="{{ event['Start Date']|strftime('%Y-%m-%d') }}" data-end-date="{{ event['End Date']|strftime('%Y-%m-%d') }}">
    <h2>{{ event['Event Name'] }}</h2>
    <p>{{ event['date_display'] }} · {{ event['City'] }} {{ event['country_emoji'] }}</p>
    <button class="reveal-btn">⏳ How many days left?</button>
    <a href="{{ event['Link'] }}" target="_blank" class="details-btn">Official Site</a>
  </div>
  {% endfor %}
</main>