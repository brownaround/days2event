{% extends "base.j2" %}
{% block title %}üá∞üá∑ K-POP Festivals & Concerts 2025 (BTS, BLACKPINK) | Days2Event{% endblock %}
{% block description %}Track K-POP concerts and festivals for 2025, featuring BTS, BLACKPINK, and more. See all dates, locations, and official links for every major K-POP event worldwide!{% endblock %}

{% block hero %}
<header class="hero">
  <h1>üéµ K-POP Festivals & Concerts 2025</h1>
  <p>Discover the hottest K-POP events around the world!</p>
  <p>Stay updated with dates, venues, and more for your favorite stars.</p>
</header>
{% endblock %}

{% block content %}
<div class="subfilter">
  <button class="subfilter-btn active" data-filter="All">All</button>
  {% for artist in unique_artists %}
    <button class="subfilter-btn" data-filter="{{ artist }}">{{ artist }}</button>
  {% endfor %}
</div>
<div class="event-list">
  {% for event in events %}
    {% if event['Start Date'].date() >= now().date() %}
      <div class="card" data-artist="{{ event['Artist'] }}">
        <h2>{{ event['Event Name'] }}</h2>
        <div class="meta">
          {{ event['date_display'] }} ÔΩú {{ event['City'] }}, {{ event['country_emoji'] }}
        </div>
        <div style="margin: 1em 0;"></div>
        <div class="button-row">
          <button class="days-left-btn" onclick="showDaysLeft(this, {{ (event['Start Date'].date() - now().date()).days }})">‚è≥ How many days left?</button>
        </div>
        <div class="button-row">
          {% if event['Official Site'] %}
            <a class="official-site-btn" href="{{ event['Official Site'] }}" target="_blank">Official Site</a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>
{% endblock %}
