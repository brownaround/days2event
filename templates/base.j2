<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1.0"/>
  <title>{% block title %}Global Festival Countdown | Days2Event{% endblock %}</title>
  <meta name="description" content="{% block description %}Track upcoming global music festivals...{% endblock %}"/>
  <meta name="keywords" content="festival countdown"/>
  <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>
<nav class="navbar">
  <div class="nav-container">
    <a href="{{ url_for('index') }}"><div class="logo">🎉 Days2Event</div></a>
    <div class="hamburger" onclick="toggleMenu()">☰</div>
    <ul class="nav-links" id="navMenu">
      <li><a href="{{ url_for('index') }}">🏠 Home</a></li>
      <li><a href="{{ url_for('multi') }}">✨ Multi-Genre</a></li>
      <li><a href="{{ url_for('edm') }}">🪩 EDM</a></li>
      <li><a href="{{ url_for('pop') }}">🎶 POP</a></li>
      <li><a href="{{ url_for('kpop') }}">🇰🇷🎵 K-POP</a></li>
      <li><a href="{{ url_for('pride') }}">🏳️‍🌈 PRIDE</a></li>
      <li><a href="{{ url_for('by_region') }}">📍 By Region</a></li>
    </ul>
  </div>
</nav>

{% block hero %}{% endblock %}
{% block search %}{% endblock %}

<div class="content-wrapper">
  {% block content %}{% endblock %}
</div>

<footer>
  <p>© 2025 Days2Event · All rights reserved</p>
  <ul class="footer-links">
    <li><a href="{{ url_for('about') }}">About</a></li>
    <li><a href="{{ url_for('privacy') }}">Privacy Policy</a></li>
    <li><a href="{{ url_for('contact') }}">Contact Us</a></li>
  </ul>
</footer>
<script>
function toggleMenu(){
  document.getElementById('navMenu').classList.toggle('show');
}
window.addEventListener('DOMContentLoaded',()=>{
  document.querySelectorAll('.nav-links a').forEach(link => {
    link.addEventListener('click', () => {
      document.getElementById('navMenu').classList.remove('show');
    });
  });
  // 카드 정렬, 카운트다운
  let cards=[...document.querySelectorAll('.event-card')];
  cards.sort((a,b)=>new Date(a.dataset.date)-new Date(b.dataset.date));
  const c=document.getElementById('events');if(c){c.innerHTML='';cards.forEach(x=>c.appendChild(x));}
  cards.forEach(card=>{
    const btn=card.querySelector('.reveal-btn'),cd=card.querySelector('.countdown'),
    d=new Date(card.dataset.date),t=new Date(),days=Math.ceil((d.setHours(0,0,0,0)-t.setHours(0,0,0,0))/(86400000));
    btn&&btn.addEventListener('click',()=>{
      cd.textContent=`⏳ ${days>0?days+' days left':days===0?'Today! 🎉':'Passed 💤'}`;
      cd.classList.remove('hidden');cd.classList.add('reveal-animation');btn.style.display='none';
    });
  });
});
function filterCards(){
  const q=document.getElementById('searchInput').value.toLowerCase();
  document.querySelectorAll('.event-card').forEach(card=>{
    card.style.display=card.querySelector('h2').innerText.toLowerCase().includes(q)?'block':'none';
  });
}
</script>
</body>
</html>
