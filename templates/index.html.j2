{% if current_page in ['pop', 'kpop', 'region'] %}
<div class="tab-menu" id="tabMenu" style="padding: 0 2rem;">
  {% if current_page == 'pop' %}
  <button class="tab-btn active" data-tab="pop">ğŸ¶ POP Artists</button>
  {% elif current_page == 'kpop' %}
