</div>

<div class="tab-content active" id="{{ current_page }}" style="padding: 0 2rem;">
  <ul>
    {% if current_page == 'pop' %}
      {% for artist in genre_artists.get('POP', []) %}
      <li>{{ artist }}</li>
      {% endfor %}
    {% elif current_page == 'kpop' %}
      {% for artist in genre_artists.get('K-POP', []) %}
      <li>{{ artist }}</li>
