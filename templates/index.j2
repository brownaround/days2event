{% extends "base.j2" %}

{% block title %}🌎 All Festivals & Concerts 2025 | Days2Event{% endblock %}
{% block description %}Browse every major music festival, rave, and concert worldwide. Countdown to top events by date, city, genre!{% endblock %}

{% block hero %}
<header class="hero">
  <h1>🌎 All Festivals & Concerts 2025</h1>
  <p>Plan your next adventure. Every festival, concert, and rave at a glance!</p>
</header>
{% endblock %}

{% block content %}
<main class="events" id="events">
  {% for event in events %}
  <div class="event-card" data-date="{{ event['Start Date'] }}">
    <h2>{{ event['Event Name'] }}</h2>
    <p>
      {{ event['Start Date'] }}
      {% if event['City'] %} · {{ event['City'] }}{% endif %}
      {% if event['Country'] %} {{ event['Country'] }}{% endif %}
    </p>
    <div class="countdown-wrapper">
      <button class="reveal-btn">⏳ How many days left?</button>
      <div class="countdown hidden"></div>
    </div>
    {% if event['Official Site'] %}
      <a class="details-btn" href="{{ event['Official Site'] }}" target="_blank">Official Site</a>
    {% endif %}
  </div>
  {% endfor %}
</main>
{% endblock %}