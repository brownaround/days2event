{% extends "base.j2" %}

{% block title %}Days2Event – Global Festival Countdown{% endblock %}
{% block description %}Track the world’s biggest festivals, concerts, and raves. Countdown, lineup, and location info for every major music event!{% endblock %}

{% block hero %}
<header class="hero">
  <h1>🌎 All Festivals & Concerts 2025</h1>
  <p>Plan your next adventure. Every festival, concert, and rave at a glance!</p>
  <div class="hero-browse-btn">
    <button type="button" onclick="scrollToEvents()">
      <span class="arrow">👇🏼</span> Browse Events
    </button>
  </div>
</header>
{% endblock %}

{% block search %}
<div class="hero-search">
  <input id="searchInput" onkeyup="filterCards()" placeholder="🔍 Search events..." type="text"/>
</div>
{% endblock %}

{% block content %}
<main class="events" id="events">
  {% for event in events %}
  <div class="event-card" data-date="{{ event['Start Date'] }}">
    <h2>{{ event['Event Name'] }}</h2>
    <p>
      {% if event['Start Date'] and event['End Date'] %}
        {{ event['Start Date'] }} - {{ event['End Date'] }}
      {% else %}
        {{ event['Start Date'] }}
      {% endif %}
      {% if event['City'] %} · {{ event['City'] }}{% endif %}
      {% if event['Country'] %} {{ event['Country'] }}{% endif %}
    </p>
    <div class="countdown-wrapper">
      <button class="reveal-btn">⏳ How many days left?</button>
      <div class="countdown hidden"></div>
    </div>
    {% if event['Official Site'] %}
      <a class="details-btn" href="{{ event['Official Site'] }}" target="_blank">Official Site</a>
    {% endif %}
  </div>
  {% endfor %}
</main>
{% endblock %}
