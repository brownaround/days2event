{% extends "base.j2" %}

{% block hero %}
<header class="hero">
  <h1>🌟 Your Festival Countdown Starts Here!</h1>
  <p>From Coachella to Tomorrowland – track days left!</p>
</header>
{% endblock %}

{% block search %}
<div class="hero-search">
  <input id="searchInput" onkeyup="filterCards()" placeholder="🔍 Search festivals..." type="text"/>
</div>
{% endblock %}

{% block content %}
<main class="events" id="events">
  {% for event in events %}
  <div class="event-card" data-date="{{ event.date }}">
    <h2>{{ event.name }}</h2>
    <p>{{ event.date_display }} · {{ event.location }}</p>
    <div class="countdown-wrapper">
      <button class="reveal-btn">⏳ How many days left?</button>
      <div class="countdown hidden"></div>
    </div>
    {% if event.link %}
    <a class="details-btn" href="{{ event.link }}" target="_blank">Official Site</a>
    {% endif %}
  </div>
  {% endfor %}
</main>
{% endblock %}
