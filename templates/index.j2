{% extends "base.j2" %}

{% block title %}Days2Event – Global Festival Countdown{% endblock %}
{% block description %}Track the world’s biggest festivals, concerts, and raves. Countdown, lineup, and location info for every major music event!{% endblock %}

{% block hero %}
<header class="hero">
  <h1>Music Festivals & Concerts Countdown | EDM, K-POP, POP, Pride & More</h1>
  <p>Plan your next adventure. Every festival, concert, and rave at a glance!</p>
  <div class="hero-browse-btn">
    <button type="button" onclick="scrollToEvents()">
      <span class="arrow">👇🏼</span> Browse Events
    </button>
  </div>
</header>
{% endblock %}

{% block content %}
<div class="event-list">
  {% for event in events %}
    {% if event['Start Date'].date() >= now().date() %}
      <div class="card">
        <h2>{{ event['Event Name'] }}</h2>
        <div class="meta">
          {{ event['date_display'] }} ｜ {{ event['City'] }}, {{ event['country_emoji'] }}
        </div>
        <div style="margin: 1em 0;"></div>
        <div class="button-row">
          <button class="days-left-btn" onclick="showDaysLeft(this, {{ (event['Start Date'].date() - now().date()).days }})">⏳ How many days left?</button>
        </div>
        <div class="button-row">
          {% if event['Official Site'] %}
            <a class="official-site-btn" href="{{ event['Official Site'] }}" target="_blank">Official Site</a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>
{% endblock %}


