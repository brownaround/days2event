{% extends "base.j2" %}
{% block title %}🪩 EDM & Rave Festivals 2025 | Days2Event{% endblock %}
{% block description %}Track the world’s best EDM, rave, and electronic music festivals in 2025. See full lineup & countdown to the party!{% endblock %}

{% block hero %}
<header class="hero">
  <h1>🪩 EDM & Rave Festivals 2025</h1>
  <p>Countdown to Tomorrowland, Ultra, EDC and more rave destinations!</p>
</header>
{% endblock %}

{% block content %}
<div class="event-list">
  {% for event in events %}
  <div class="card">
    <div class="card-header">
      <span class="date">{{ event['date_display'] }}</span>
      <span class="country">{{ event['country_emoji'] }}</span>
    </div>
    <h2>{{ event['Event Name'] }}</h2>
    <div class="meta">
      <span>{{ event['City'] }}</span> |
      <span>{{ event['Category'] }}</span>
    </div>
    {% if event['Official Site'] %}
      <div><a href="{{ event['Official Site'] }}" target="_blank">공식 사이트 ↗</a></div>
    {% endif %}
    <div class="countdown">
      {% if event['Start Date'] >= now().date() %}
        {{ (event['Start Date'] - now().date()).days }} days left!
      {% endif %}
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}

