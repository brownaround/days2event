{% extends "base.j2" %}
{% block title %}🪩 EDM & Rave Festivals 2025 | Days2Event{% endblock %}
{% block description %}Track the world’s best EDM, rave, and electronic music festivals in 2025. See full lineup & countdown to the party!{% endblock %}

{% block hero %}
<header class="hero">
  <h1>🪩 EDM & Rave Festivals 2025</h1>
  <p>Countdown to Tomorrowland, Ultra, EDC and more rave destinations!</p>
</header>
{% endblock %}

{% block content %}
<main class="events" id="events">
  {% for event in events %}
    <div class="event-card" data-start-date="{{ event['Start Date'] }}" data-end-date="{{ event['End Date'] }}">
      <h2>{{ event['Event Name'] }}</h2>
      <p>
        {{ event.date_display }}
        {% if event['City'] %} · {{ event['City'] }}{% endif %}
        {% if event.country_emoji %} {{ event.country_emoji }}{% endif %}
      </p>
      <div class="countdown-wrapper">
        <button class="reveal-btn">⏳ How many days left?</button>
        <div class="countdown hidden"></div>
      </div>
      {% if event['Official Site'] %}
        <a class="details-btn" href="{{ event['Official Site'] }}" target="_blank">Official Site</a>
      {% endif %}
    </div>
  {% endfor %}
</main>
{% endblock %}
