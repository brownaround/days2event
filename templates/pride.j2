{% extends "base.j2" %}
{% block title %}🏳️‍🌈 Global PRIDE, Rave & Circuit Parties 2025 | Days2Event{% endblock %}
{% block description %}Celebrate at the world’s best PRIDE parades, LGBTQ+ festivals, raves, and circuit parties! Countdown to major global pride events and find official links for every LGBTQ+ circuit party worldwide.{% endblock %}

{% block hero %}
<header class="hero">
  <h1>🏳️‍🌈 PRIDE Festivals & Circuit Parties</h1>
  <p>Discover upcoming PRIDE parades, LGBTQ+ music festivals, raves, and <strong>circuit parties</strong> around the world.</p>
  <p>Find the hottest parties and join the global celebration!</p>
</header>
{% endblock %}

{% block content %}
<div class="event-list">
  {% for event in events %}
  <div class="card">
    <div class="card-header">
      <span class="date">{{ event['date_display'] }}</span>
      <span class="country">{{ event['country_emoji'] }}</span>
    </div>
    <h2>{{ event['Event Name'] }}</h2>
    <div class="meta">
      <span>{{ event['City'] }}</span> |
      <span>{{ event['Category'] }}</span>
    </div>
    {% if event['Official Site'] %}
      <div><a href="{{ event['Official Site'] }}" target="_blank">공식 사이트 ↗</a></div>
    {% endif %}
    <div class="countdown">
      {% if event['Start Date'].date() >= now().date() %}
        {{ (event['Start Date'].date() - now().date()).days }} days left!
      {% endif %}
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}

