{% extends "base.j2" %}
{% block title %}📍 Festivals by Region 2025 | Days2Event{% endblock %}
{% block description %}Explore top music festivals by continent and country. Find upcoming events near you, sorted by region, with official links and countdowns!{% endblock %}

{% block hero %}
<header class="hero">
  <h1>📍 Festivals by Region</h1>
  <p>Browse upcoming music festivals by country or continent. Discover what’s happening near you!</p>
</header>
{% endblock %}

{% block content %}
<main class="events" id="events">
  {% for event in events %}
  <div class="event-card" data-start-date="{{ event['Start Date'] }}" data-end-date="{{ event['End Date'] }}">
    <h2>{{ event['Event Name'] }}</h2>
    <p>
      {{ event.date_display }}
      {% if event['City'] %} · {{ event['City'] }}{% endif %}
      {% if event.country_emoji %} &nbsp;{{ event.country_emoji }}{% endif %}
    </p>
        <div class="countdown-wrapper">
      <button class="reveal-btn">⏳ How many days left?</button>
      <div class="countdown hidden"></div>
    </div>
    {% if event['Official Site'] %}
      <a class="details-btn" href="{{ event['Official Site'] }}" target="_blank">Official Site</a>
    {% endif %}
  </div>
  {% endfor %}
</main>
{% endblock %}