{% extends "base.j2" %}
{% block title %}📍 Festivals by Region 2025 | Days2Event{% endblock %}
{% block description %}Explore top music festivals by continent and country. Find upcoming events near you, sorted by region, with official links and countdowns!{% endblock %}

{% block hero %}
<header class="hero">
  <h1>📍 Festivals by Region</h1>
  <p>Browse upcoming music festivals by country or continent. Discover what’s happening near you!</p>
</header>
{% endblock %}

{% block content %}
<main class="events" id="events">
  {% for event in events %}
    <div class="event-card" data-start-date="{{ event['Start Date']|strftime('%Y-%m-%d') }}" data-end-date="{{ event['End Date']|strftime('%Y-%m-%d') }}">
      <h2>{{ event['Event Name'] }}</h2>
      <p>
        {{ event['date_display'] }} · {{ event['City'] }} {{ event['country_emoji'] }}
      </p>
      <button class="reveal-btn">⏳ How many days left?</button>
      <a href="{{ event['Link'] }}" target="_blank" class="site-link">Official Site</a>
    </div>
  {% endfor %}
</main>
{% endblock %}