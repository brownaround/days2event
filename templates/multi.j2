{% extends "base.j2" %}
{% block title %}✨ Multi-Genre Festivals 2025 | Days2Event{% endblock %}
{% block description %}Explore the top multi-genre music festivals: Coachella, Lollapalooza, and more. Find dates, locations, and official links!{% endblock %}

{% block hero %}
<header class="hero">
  <h1>✨ Find Your Favorite Music Festivals</h1>
  <p>From Coachella to Glastonbury—your global multi-genre festival guide!</p>
</header>
{% endblock %}

{% block content %}
<main class="events" id="events">
  {% for event in events %}
  <div class="event-card" data-date="{{ event['Start Date'] }}">
    <h2>{{ event['Event Name'] }}</h2>
    <p>
      {# 날짜 포맷 변경 #}
      {{ event.date_display }}
      
      {# 도시가 있으면 점(`·`) 추가해서 표시 #}
      {% if event['City'] %}
        · {{ event['City'] }}
      {% endif %}
      
      {# 국가명 대신 이모지 출력 #}
      {% if event.country_emoji %}
        &nbsp;{{ event.country_emoji }}
      {% endif %}
    </p>
    <div class="countdown-wrapper">
      <button class="reveal-btn">⏳ How many days left?</button>
      <div class="countdown hidden"></div>
    </div>
    {% if event['Official Site'] %}
      <a class="details-btn" href="{{ event['Official Site'] }}" target="_blank">Official Site</a>
    {% endif %}
  </div>
  {% endfor %}
</main>
{% endblock %}

